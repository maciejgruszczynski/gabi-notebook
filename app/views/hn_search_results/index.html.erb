<div class="table-responsive">
  
  <%= turbo_stream_from :hn_search_results %>

  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">title</th>
        <th scope="col">author</th>
        <th scope="col">karma_points</th>
        <th scope="col">url</th>
        <th scope="col">creation_date</th>
        <th scope="col">tags</th>
        <th scope="col">actions</th>
      </tr>
    </thead>
    <%= render 'hn_search_results', hn_search_results: @hn_search_results %>
  </table>
  <%= render "pager", previous_page: @hn_search_results.previous_page, next_page: @hn_search_results.next_page %>
</div>